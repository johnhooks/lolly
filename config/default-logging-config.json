{
    "$schema": "https://dozuki.zip/schemas/http-logging-config.json",
    "version": 1,
    "enabled": false,
    "http_redactions_enabled": true,
    "http_whitelist_enabled": false,
    "wp_rest_logging_enabled": true,
    "wp_http_client_logging_enabled": true,
    "http_redactions": [
        {
            "host": "*",
            "paths": [
                {
                    "path": "*",
                    "redactions": [
                        {"type": "*", "value": "password"},
                        {"type": "*", "value": "password_confirm"},
                        {"type": "*", "value": "password_confirmation"},
                        {"type": "*", "value": "api_key"},
                        {"type": "*", "value": "apikey"},
                        {"type": "*", "value": "hash"},
                        {"type": "header", "value": "cookie", "remove": true},
                        {"type": "header", "value": "authorization", "remove": true}
                    ]
                }
            ]
        },
        {
            "host": "wordpress.org",
            "paths": [
                {
                    "path": "/news/feed/",
                    "redactions": [
                        {"type": "response", "value": "*", "remove": true}
                    ]
                }
            ]
        },
        {
            "host": "api.wordpress.org",
            "paths": [
                {
                    "path": "/core/checksums/",
                    "redactions": [
                        {"type": "response", "value": "*", "remove": true}
                    ],
                    "glob": true
                },
                {
                    "path": "/core/version-check/",
                    "redactions": [
                        {"type": "query", "value": "*", "remove": true},
                        {"type": "response", "value": "*", "remove": true}
                    ],
                    "glob": true
                },
                {
                    "path": "/plugins/info/",
                    "redactions": [
                        {"type": "response", "value": "*", "remove": true}
                    ],
                    "glob": true
                },
                {
                    "path": "/plugins/update-check/",
                    "redactions": [
                        {"type": "response", "value": "*", "remove": true}
                    ],
                    "glob": true
                },
                {
                    "path": "/themes/info/",
                    "redactions": [
                        {"type": "response", "value": "*", "remove": true}
                    ],
                    "glob": true
                },
                {
                    "path": "/themes/update-check/",
                    "redactions": [
                        {"type": "response", "value": "*", "remove": true}
                    ],
                    "glob": true
                },
                {
                    "path": "/translations/core/",
                    "redactions": [
                        {"type": "response", "value": "*", "remove": true}
                    ],
                    "glob": true
                }
            ]
        },
        {
            "host": "planet.wordpress.org",
            "paths": [
                {
                    "path": "/feed/",
                    "redactions": [
                        {"type": "response", "value": "*", "remove": true}
                    ]
                }
            ]
        }
    ],
    "http_whitelist": []
}
